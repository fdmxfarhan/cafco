extends layout
block styles
    link(rel="stylesheet", href="/css/users.css")

block content
    //- include partials/messages
    -if(errors || success_msg || error_msg || error){
        .errors-area
            -if(errors){
                -for(var i=0; i<errors.length; i++){
                    .error(id='error#{i}')
                        i.fa.fa-warning
                        h1= errors[i].msg
                        i.fa.fa-times.close-error
                        .time-interval(id='time#{i}')
                -}
            -}
            -if(success_msg != ''){
                .error.green-error(id='error3')
                    i.fa.fa-check
                    h1= success_msg
                    i.fa.fa-times.close-error
                    .time-interval(id='time3')
            -}
            -if(error_msg != ''){
                .error(id='error4')
                    i.fa.fa-warning
                    h1= error_msg
                    i.fa.fa-times.close-error
                    .time-interval(id='time4')
            -}
            -if(error != ''){
                .error(id='error5')
                    i.fa.fa-warning
                    h1= error
                    i.fa.fa-times.close-error
                    .time-interval(id='time5')
            -}
            
    -}
    
    .register
        h1.title 
            i.fa.fa-key
            | تغییر کلمه عبور
        form(action="/users/change-pass" target="_parent" id="register" method="POST")
            input.hidden(type="text" value="#{idNumber}" name="idNumber" style="display: none;")
            .text-input-area
                input.textinput(type="text" placeholder="رمز عبور جدید" name="password" value= "#{ typeof password != 'undefined' ? password: '' }" required)
                i.fa.fa-key
            .text-input-area
                input.textinput(type="text" placeholder="تایید رمز عبور" name="confirmPassword" value= "#{ typeof confirmPassword != 'undefined' ? confirmPassword: '' }" required)
                i.fa.fa-check
            .text-input-area
                button.submit(type="submit") ثبت
    script(src="/js/users.js")